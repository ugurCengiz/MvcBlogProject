<div class="tech-btm">
    <p>Teknoloji, yazılım ve diğer bloglar...</p>
    <form id="subForm" method="post">
        <input type="email" placeholder="Mail Adresinizi Giriniz!" name="mail" required="">
        <input type="submit" onclick="subscribe()" value="Abone Ol">
        <br />
        <div id="sonuc"></div><br />
    </form>
</div>


<script type="text/javascript">
    function subscribe() {
        var data = $("#subForm").serialize();
        console.log(data);
        alert(data);
        $.ajax({
            type: 'POST',
            url: '/NewsLetter/SubscribeMail',
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
            data: data,
            success: function (result) {
                alert('Abone olduğunuz için Teşekkürler ');
                console.log(result);
            },
            error: function () {
                alert('Abone olunamadı daha sonra tekrar deneyiniz');
                console.log('Failed ');
            }
        })
    }

</script>

