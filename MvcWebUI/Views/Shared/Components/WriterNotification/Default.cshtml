@using Entity.Concrete
@model List<Natification>
<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
    <h6 class="p-3 mb-0">Bildirimler</h6>
    @foreach (var item in Model.Where(x=>x.NatificationStatus==true).OrderByDescending(x=>x.NatificationId).Take(5))
    {
        <div class="dropdown-divider"></div>
        <a class="dropdown-item preview-item">
            <div class="preview-thumbnail">
                <div class="@item.NatificationColor">
                    <i class="@item.NatificationTypeSymbol"></i>
                </div>
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject font-weight-normal mb-1">@item.NatificationType</h6>
                <p class="text-gray ellipsis mb-0"> @item.NatificationDetails </p>
            </div>
        </a>
       
    }
    <div class="dropdown-divider"></div>
    <h6 class="p-3 mb-0 text-center">Tüm Bildirimleri Gör</h6>
</div>