@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<Entity.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<a href="/Admin/Category/AddCategory/" class="btn btn-danger" style="float: right">YENİ KATEGORİ OLUŞTUR</a>
<h1>Kategori Listesi</h1>
<br />
<table class="table table-bordered">
    
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Aktif Yap</th>
        <th>Pasif Yap</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryId</th>
            <td>@item.CategoryName</td>
            <td><a href="#" class="btn btn-info">Aktif Yap</a></td>
            <td><a href="/Admin/Category/DeleteCategory/@item.CategoryId" id="Deletebtn"
                   onclick="return confirm('Silmek istediğinize emin misiniz');" class="btn btn-warning">Pasif Yap</a></td>
            <td><a href="#" class="btn btn-success">Düzenle</a></td>
        </tr>
    }
</table>
<br/>
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new {page}))


