@using Entity.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "UserRolList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kullanıcı Rol Listesi</h1>
<a href="/Admin/AdminRole/Index" class="btn btn-primary" style="float:right"> Rol Listesine Dön</a>

<table class="table table-bordered">
    <tr>
        <th>Kullanıcı</th>
        <th>Rol Ataması</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td><a href="/Admin/AdminRole/AssignRole/@item.Id/" class="btn btn-outline-warning">Rol Ata</a></td>
        </tr>
    }
</table>